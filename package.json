{
  "name": "typescript-project-starter",
  "version": "0.0.2",
  "description": "A TS project starter w/ SASS, Jest, and Webpack Server",
  "private": true,
  "keywords": [
    "typescript",
    "javascript",
    "ecmascript",
    "sass",
    "frontend"
  ],
  "license": "ISC",
  "author": "Farhan 'AlfaTrion' Jiwani <farhan@farhanjiwani.com>",
  "engines": {
    "node": ">=18.20.0",
    "npm": ">=10.8.3"
  },
  "main": "main.ts",
  "scripts": {
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest",
    "start": "webpack serve --config webpack.config.dev.js",
    "lint": "npm run lint:styles && npm run lint:js",
    "build": "webpack --config webpack.config.prod.js",
    "serve": "npm run build && npm run serve:dist",
    "test:changed": "npm run test -- -o",
    "test:watch": "npm run test -- --watch",
    "start:open": "webpack serve --open --config webpack.config.dev.js",
    "lint:styles": "npx stylelint \"**/*.scss\"",
    "lint:styles:fix": "npm run lint:styles -- --fix",
    "lint:js": "npx eslint",
    "lint:js:fix": "npm run lint:js -- --fix",
    "serve:dist": "npx serve dist"
  },
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@babel/preset-env": "^7.26.0",
    "@babel/preset-typescript": "^7.26.0",
    "babel-jest": "^29.7.0",
    "copy-webpack-plugin": "^11.0.0",
    "cross-env": "^7.0.3",
    "css-loader": "^7.1.2",
    "eslint": "^8.57.1",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-promise": "^6.6.0",
    "html-webpack-plugin": "^5.6.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "sass": "^1.82.0",
    "sass-loader": "^16.0.4",
    "style-loader": "^4.0.0",
    "stylelint": "^16.11.0",
    "stylelint-config-standard-scss": "^14.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.0.4",
    "webpack-merge": "^5.10.0"
  }
}
